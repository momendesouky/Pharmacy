<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login | PharmaPlus</title>
  
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Round" rel="stylesheet">

  <style>
    /* --- 1. VARIABLES & THEME CONFIGURATION --- */
    :root {
      --primary: #0d9488;       /* Teal 600 */
      --primary-hover: #0f766e; /* Teal 700 */
      --bg-gradient: linear-gradient(135deg, #f0fdfa 0%, #ccfbf1 100%);
      --surface: #ffffff;
      --text-main: #111827;
      --text-muted: #6b7280;
      --border: #e5e7eb;
      --shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
      --ring-focus: rgba(13, 148, 136, 0.3);
      --radius: 16px;
      --nav-height: 70px;
    }

    [data-theme="dark"] {
      --primary: #2dd4bf;       /* Teal 400 */
      --primary-hover: #14b8a6; /* Teal 500 */
      --bg-gradient: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
      --surface: #1f2937;
      --text-main: #f9fafb;
      --text-muted: #9ca3af;
      --border: #374151;
      --shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.5);
    }

    * { box-sizing: border-box; margin: 0; padding: 0; }

    body {
      font-family: 'Poppins', sans-serif;
      background: var(--bg-gradient);
      color: var(--text-main);
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      transition: background 0.3s ease, color 0.3s ease;
    }

    /* --- 2. NAVIGATION BAR --- */
    header {
      height: var(--nav-height);
      width: 100%;
      background: var(--surface);
      border-bottom: 1px solid var(--border);
      position: fixed;
      top: 0; z-index: 100;
      display: flex;
      align-items: center;
      padding: 0 24px;
      justify-content: space-between;
      backdrop-filter: blur(10px); /* Glass effect */
    }

    .logo {
      font-size: 1.5rem;
      font-weight: 700;
      color: var(--primary);
      text-decoration: none;
      display: flex;
      align-items: center;
      gap: 8px;
    }

    .nav-links {
      display: flex;
      gap: 32px;
      align-items: center;
      list-style: none;
    }

    .nav-links a {
      text-decoration: none;
      color: var(--text-muted);
      font-weight: 500;
      transition: color 0.2s;
    }

    .nav-links a:hover, .nav-links a.active {
      color: var(--primary);
    }

    /* Mobile Menu Toggle */
    .menu-btn { display: none; cursor: pointer; color: var(--text-main); }

    /* --- 3. MAIN CONTENT (Centered Login) --- */
    main {
      flex: 1;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 100px 20px 40px; /* Top padding clears the fixed navbar */
    }

    .login-card {
      width: 100%;
      max-width: 400px;
      background: var(--surface);
      padding: 2.5rem;
      border-radius: var(--radius);
      box-shadow: var(--shadow);
      border: 1px solid var(--border);
      animation: floatUp 0.6s ease-out;
    }

    @keyframes floatUp {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }

    .form-group { margin-bottom: 1.25rem; }
    
    .form-label {
      display: block; font-size: 0.9rem; font-weight: 500; margin-bottom: 0.5rem;
      color: var(--text-main);
    }

    .input-wrapper { position: relative; display: flex; align-items: center; }

    .input-icon {
      position: absolute; left: 14px; color: var(--text-muted); pointer-events: none;
    }

    .form-input {
      width: 100%; padding: 12px 16px 12px 44px;
      font-size: 1rem; color: var(--text-main); background: var(--surface);
      border: 2px solid var(--border); border-radius: 12px; outline: none;
      font-family: inherit; transition: 0.2s;
    }

    .form-input:focus { border-color: var(--primary); box-shadow: 0 0 0 4px var(--ring-focus); }

    .btn-submit {
      width: 100%; padding: 14px; background: var(--primary); color: white;
      border: none; border-radius: 12px; font-size: 1rem; font-weight: 600;
      cursor: pointer; margin-top: 1rem; display: flex; justify-content: center;
      align-items: center; gap: 8px; transition: 0.2s;
    }
    
    [data-theme="dark"] .btn-submit { color: #0f172a; }
    .btn-submit:hover { background: var(--primary-hover); transform: translateY(-2px); }

    /* Alert Box */
    .alert-error {
      background: #fef2f2; border: 1px solid #fecaca; color: #991b1b;
      padding: 12px; border-radius: 12px; margin-bottom: 1.5rem;
      display: flex; align-items: center; gap: 10px; font-size: 0.9rem;
    }
    [data-theme="dark"] .alert-error { background: #450a0a; border-color: #7f1d1d; color: #fecaca; }

    /* Theme Toggle */
    .theme-toggle {
      background: transparent; border: 1px solid var(--border);
      padding: 8px 12px; border-radius: 20px; cursor: pointer;
      display: flex; align-items: center; gap: 6px; color: var(--text-main);
    }

    /* --- 4. RESPONSIVE --- */
    @media (max-width: 768px) {
      .menu-btn { display: block; }
      .nav-links {
        position: fixed; top: var(--nav-height); left: 0; right: 0;
        background: var(--surface); flex-direction: column; padding: 2rem;
        border-bottom: 1px solid var(--border); transform: translateY(-200%);
        transition: transform 0.3s ease; z-index: 90;
      }
      .nav-links.open { transform: translateY(0); }
    }
  </style>
</head>
<body>

  <header>
    <a href="/" class="logo">
      <i class="material-icons-round">medication</i> PharmaPlus
    </a>
    
    <div class="menu-btn" id="menuBtn">
      <i class="material-icons-round">menu</i>
    </div>

    <ul class="nav-links" id="navLinks">
      <li><a href="/">Home</a></li>
      <li><a href="/signup">Sign Up</a></li>
      <li>
        <button id="theme-toggle" class="theme-toggle" type="button">
          <i class="material-icons-round" style="font-size: 1.1rem;">dark_mode</i>
          <span id="theme-text">Dark</span>
        </button>
      </li>
    </ul>
  </header>

  <main>
    <div class="login-card">
      <div style="text-align: center; margin-bottom: 2rem;">
        <h2 style="margin-bottom: 0.5rem;">Welcome back</h2>
        <p style="color: var(--text-muted); font-size: 0.9rem;">Please login to your account.</p>
      </div>

      <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert-error">
          <i class="material-icons-round">error_outline</i>
          <span><%= error %></span>
        </div>
      <% } %>

      <form action="/login" method="POST">
        <div class="form-group">
          <label for="username" class="form-label">Username</label>
          <div class="input-wrapper">
            <i class="material-icons-round input-icon">person</i>
            <input type="text" id="username" name="username" class="form-input" placeholder="Enter username" required autocomplete="username">
          </div>
        </div>

        <div class="form-group">
          <label for="password" class="form-label">Password</label>
          <div class="input-wrapper">
            <i class="material-icons-round input-icon">lock</i>
            <input type="password" id="password" name="password" class="form-input" placeholder="••••••••" required autocomplete="current-password">
          </div>
        </div>

        <button type="submit" class="btn-submit">
          Login <i class="material-icons-round">arrow_forward</i>
        </button>
      </form>
      
      <div style="text-align: center; margin-top: 1.5rem; font-size: 0.9rem; color: var(--text-muted);">
        Don't have an account? <a href="/signup" style="color: var(--primary); font-weight: 600; text-decoration: none;">Sign up</a>
      </div>
    </div>
  </main>

  <script>
    // 1. Mobile Menu Logic
    const menuBtn = document.getElementById('menuBtn');
    const navLinks = document.getElementById('navLinks');
    
    menuBtn.addEventListener('click', () => {
      navLinks.classList.toggle('open');
      const icon = menuBtn.querySelector('i');
      icon.textContent = navLinks.classList.contains('open') ? 'close' : 'menu';
    });

    // 2. Theme Toggle Logic
    const toggleBtn = document.getElementById('theme-toggle');
    const icon = toggleBtn.querySelector('i');
    const text = document.getElementById('theme-text');
    const html = document.documentElement;

    const savedTheme = localStorage.getItem('theme') || 'light';
    html.setAttribute('data-theme', savedTheme);
    updateUI(savedTheme);

    toggleBtn.addEventListener('click', () => {
      const current = html.getAttribute('data-theme');
      const next = current === 'light' ? 'dark' : 'light';
      html.setAttribute('data-theme', next);
      localStorage.setItem('theme', next);
      updateUI(next);
    });

    function updateUI(theme) {
      if (theme === 'dark') {
        icon.textContent = 'light_mode';
        text.textContent = 'Light';
      } else {
        icon.textContent = 'dark_mode';
        text.textContent = 'Dark';
      }
    }
  </script>

</body>
</html>