<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= username %> Cart</title>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
  <style>
    :root {
      --brand: #1abc9c;
      --brand-dark: #148f77;
      --danger: #e53935;
    }

    body {
      background: #f4f6f8;
    }

    nav {
      background-color: var(--brand);
    }

    .cart-card {
      border-radius: 16px;
      padding: 1.5rem;
      box-shadow: 0 16px 30px rgba(0, 0, 0, 0.08);
      animation: fadeIn 0.6s ease;
    }

    table thead {
      background: rgba(26, 188, 156, 0.1);
    }

    table thead th {
      color: #1a7f6b;
      font-weight: 600;
    }

    .total-chip {
      background: var(--brand);
      color: #fff;
      font-weight: 600;
      padding: 0.4rem 1rem;
      border-radius: 999px;
      display: inline-flex;
      align-items: center;
      gap: 0.4rem;
    }

    .checkout-btn {
      background-color: var(--brand);
    }

    .checkout-btn:hover {
      background-color: var(--brand-dark);
    }

    .qty-actions {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 0.3rem;
    }

    .qty-btn {
      border: none;
      border-radius: 6px;
      min-width: 34px;
      height: 34px;
      padding: 0 10px;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      color: white;
      cursor: pointer;
      transition: transform 0.15s ease, opacity 0.15s ease;
    }

    .qty-btn:hover {
      transform: translateY(-1px);
      opacity: 0.95;
    }

    .qty-btn.plus {
      background: var(--brand);
    }

    .qty-btn.minus {
      background: var(--danger);
    }

    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(12px); }
      to { opacity: 1; transform: translateY(0); }
    }
  </style>
</head>
<body>
  <nav>
    <div class="nav-wrapper container">
      <a href="/user/Medcines" class="brand-logo">ðŸ’Š Pharmacy</a>
      <ul class="right hide-on-med-and-down">
        <li><a href="/user/Medcines">Inventory</a></li>
        <li><a href="/logout">Logout</a></li>
      </ul>
    </div>
  </nav>

  <main class="container section">
    <h4 class="center-align">Your Cart</h4>
    <div class="cart-card white">
      <% if (cartItems && cartItems.length) { %>
        <table class="highlight responsive-table">
          <thead>
            <tr>
              <th>Medicine</th>
              <th>Form</th>
              <th>Price</th>
              <th>Quantity</th>
              <th>Subtotal</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% let total = 0; %>
            <% cartItems.forEach(item => { %>
              <% const med = item.medId || {}; %>
              <% if (!med._id) return; %>
              <% const subtotal = (med.price || 0) * item.quantity; %>
              <% total += subtotal; %>
              <tr>
                <td><%= med.name || 'Unknown' %></td>
                <td><%= med.form || '-' %></td>
                <td>$<%= Number(med.price || 0).toFixed(2) %></td>
                <td><%= item.quantity %></td>
                <td>$<%= subtotal.toFixed(2) %></td>
                <td>
                  <div class="qty-actions">
                    <form action="/cart/add/<%= med._id %>" method="POST" style="display: inline;">
                      <button class="qty-btn plus" title="Add one" type="submit">
                        <i class="material-icons tiny">add</i>&nbsp;Add
                      </button>
                    </form>
                    <form action="/cart/delete/<%= med._id %>" method="POST" style="display: inline;">
                      <button class="qty-btn minus" title="Remove one" type="submit">
                        <i class="material-icons tiny">remove</i>&nbsp;Remove
                      </button>
                    </form>
                  </div>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
        <div class="right-align" style="margin-top: 1.5rem;">
          <span class="total-chip">
            <i class="material-icons">payments</i>
            Total: $<%= total.toFixed(2) %>
          </span>
        </div>
        <div class="center-align" style="margin-top: 2rem;">
          <a href="#" class="btn-large waves-effect waves-light checkout-btn">
            <i class="material-icons left">shopping_cart_checkout</i>
            Checkout
          </a>
        </div>
      <% } else { %>
        <p class="center-align">Your cart is empty.</p>
      <% } %>
    </div>
  </main>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
</body>
</html>
