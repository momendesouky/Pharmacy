<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Cart | PharmaPlus</title>
  
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  
  <script src="https://unpkg.com/@phosphor-icons/web"></script>

  <style>
    /* --- THEME VARIABLES --- */
    :root {
      --primary: #0d9488;
      --primary-dark: #0f766e;
      --primary-soft: #f0fdfa;
      --bg-body: #f3f4f6;
      --bg-surface: #ffffff;
      --text-main: #111827;
      --text-muted: #6b7280;
      --border: #e5e7eb;
      --danger: #ef4444;
    }

    * { box-sizing: border-box; margin: 0; padding: 0; outline: none; }

    body {
      font-family: 'Inter', sans-serif;
      background: var(--bg-body);
      color: var(--text-main);
    }

    /* --- NAVBAR --- */
    nav {
      background: var(--bg-surface);
      border-bottom: 1px solid var(--border);
      padding: 0 40px;
      height: 70px;
      display: flex;
      align-items: center;
      justify-content: space-between;
      position: sticky;
      top: 0;
      z-index: 50;
    }

    .brand {
      font-size: 1.25rem; font-weight: 700; color: var(--primary);
      display: flex; align-items: center; gap: 8px; text-decoration: none;
    }

    .nav-links { display: flex; gap: 24px; }
    .nav-links a { text-decoration: none; color: var(--text-muted); font-weight: 500; transition: 0.2s; }
    .nav-links a:hover { color: var(--primary); }

    /* --- LAYOUT --- */
    .container {
      max-width: 1200px;
      margin: 40px auto;
      padding: 0 20px;
    }

    .cart-grid {
      display: grid;
      grid-template-columns: 1fr 380px; /* List takes space, Summary is fixed width */
      gap: 32px;
      align-items: start;
    }

    .page-title { margin-bottom: 24px; font-size: 1.8rem; font-weight: 700; }

    /* --- LEFT: CART ITEMS --- */
    .cart-list {
      background: var(--bg-surface);
      border-radius: 12px;
      border: 1px solid var(--border);
      overflow: hidden;
    }

    .cart-item {
      display: flex;
      align-items: center;
      padding: 24px;
      border-bottom: 1px solid var(--border);
      gap: 20px;
    }
    .cart-item:last-child { border-bottom: none; }

    .item-image {
      width: 80px; height: 80px;
      border-radius: 8px;
      background: #f3f4f6;
      object-fit: cover;
    }

    .item-details { flex: 1; }
    .item-name { font-weight: 600; font-size: 1.1rem; color: var(--text-main); display: block; }
    .item-form { color: var(--text-muted); font-size: 0.9rem; margin-top: 4px; }
    .item-price { color: var(--primary); font-weight: 700; margin-top: 4px; }

    /* Quantity Controls */
    .qty-control {
      display: flex; align-items: center; gap: 10px;
      background: #f9fafb; padding: 4px; border-radius: 8px; border: 1px solid var(--border);
    }

    .qty-btn {
      width: 32px; height: 32px;
      border: none; background: white;
      border-radius: 6px;
      display: flex; align-items: center; justify-content: center;
      cursor: pointer; color: var(--text-main);
      box-shadow: 0 1px 2px rgba(0,0,0,0.05);
      transition: 0.2s;
    }
    .qty-btn:hover { background: var(--primary); color: white; }

    .qty-val { font-weight: 600; min-width: 20px; text-align: center; }

    .item-subtotal {
      font-weight: 700;
      font-size: 1.1rem;
      min-width: 80px;
      text-align: right;
    }

    /* --- RIGHT: ORDER SUMMARY --- */
    .summary-card {
      background: var(--bg-surface);
      padding: 24px;
      border-radius: 12px;
      border: 1px solid var(--border);
      position: sticky;
      top: 100px; /* Sticks when scrolling */
    }

    .summary-row {
      display: flex; justify-content: space-between;
      margin-bottom: 16px; color: var(--text-muted);
    }

    .summary-total {
      display: flex; justify-content: space-between;
      margin-top: 16px; padding-top: 16px;
      border-top: 1px solid var(--border);
      font-weight: 700; font-size: 1.25rem; color: var(--text-main);
    }

    .btn-checkout {
      display: flex; align-items: center; justify-content: center; gap: 8px;
      width: 100%;
      background: var(--primary); color: white;
      padding: 14px; margin-top: 24px;
      border: none; border-radius: 8px;
      font-size: 1rem; font-weight: 600;
      cursor: pointer; text-decoration: none;
      transition: 0.2s;
    }
    .btn-checkout:hover { background: var(--primary-dark); }

    /* Empty State */
    .empty-state {
      text-align: center; padding: 60px 20px;
      background: white; border-radius: 12px; border: 1px solid var(--border);
    }

    /* Responsive */
    @media (max-width: 768px) {
      .cart-grid { grid-template-columns: 1fr; }
    }
  </style>
</head>
<body>

  <nav>
    <a href="/user/Medcines" class="brand">
      <i class="ph-fill ph-first-aid-kit" style="font-size: 28px;"></i>
      PharmaPlus
    </a>
    <div class="nav-links">
      <a href="/user/Medcines">Shop Medicines</a>
      <a href="/logout" style="color: var(--danger);">Logout</a>
    </div>
  </nav>

  <div class="container">
    <h1 class="page-title">Shopping Cart</h1>

    <% if (cartItems && cartItems.length > 0) { %>
      
      <div class="cart-grid">
        
        <div class="cart-list">
          <% let total = 0; %>
          <% cartItems.forEach(item => { %>
            <% const med = item.medId || {}; %>
            <% if (!med._id) return; %>
            <% const subtotal = (med.price || 0) * item.quantity; %>
            <% total += subtotal; %>

            <div class="cart-item">
              <% if (med.imageUrl) { %>
                <img src="<%= med.imageUrl %>" class="item-image" alt="<%= med.name %>">
              <% } else { %>
                <img src="https://images.unsplash.com/photo-1584017911766-d451b3d0e843?w=100&q=80" class="item-image">
              <% } %>

              <div class="item-details">
                <span class="item-name"><%= med.name %></span>
                <div class="item-form"><%= med.form %></div>
                <div class="item-price">$<%= med.price %> / unit</div>
              </div>

              <div class="qty-control">
                <button class="qty-btn" onclick="modifyCart('<%= med._id %>', 'remove')">
                  <i class="ph-bold ph-minus"></i>
                </button>
                <span class="qty-val"><%= item.quantity %></span>
                <button class="qty-btn" onclick="modifyCart('<%= med._id %>', 'add')">
                  <i class="ph-bold ph-plus"></i>
                </button>
              </div>

              <div class="item-subtotal">
                $<%= subtotal.toFixed(2) %>
              </div>
            </div>
          <% }) %>
        </div>

        <div class="summary-card">
          <h3 style="margin-bottom: 20px; font-size: 1.1rem;">Order Summary</h3>
          
          <div class="summary-row">
            <span>Subtotal</span>
            <span>$<%= total.toFixed(2) %></span>
          </div>
          <div class="summary-row">
            <span>Tax (0%)</span> <span>$0.00</span>
          </div>
          
          <div class="summary-total">
            <span>Total</span>
            <span>$<%= total.toFixed(2) %></span>
          </div>

          <a href="/checkout" class="btn-checkout">
            Checkout <i class="ph-bold ph-arrow-right"></i>
          </a>
        </div>

      </div>

    <% } else { %>
      
      <div class="empty-state">
        <i class="ph-duotone ph-shopping-cart" style="font-size: 4rem; color: var(--text-muted); margin-bottom: 20px;"></i>
        <h2 style="font-size: 1.5rem; margin-bottom: 10px;">Your cart is empty</h2>
        <p style="color: var(--text-muted); margin-bottom: 24px;">Looks like you haven't added anything yet.</p>
        <a href="/user/Medcines" class="btn-checkout" style="width: auto; display: inline-flex; padding: 12px 32px;">
          Start Shopping
        </a>
      </div>

    <% } %>
  </div>

  <script>
    // Unified Function to Add/Remove items
    async function modifyCart(id, action) {
      // Determine the URL based on action
      const url = action === 'add' ? `/cart/add/${id}` : `/cart/delete/${id}`;
      
      try {
        const response = await fetch(url, { method: "POST" });
        
        // Reload page to reflect changes
        if (response.ok) {
          window.location.reload();
        } else {
          console.error("Failed to update cart");
        }
      } catch (error) {
        console.error("Error:", error);
      }
    }
  </script>

</body>
</html>