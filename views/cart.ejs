<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= username %> Cart</title>
  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: #f4f6f8;
      margin: 0;
      padding: 0;
    }

    /* Pharmacy header */
    .pharmacy-header {
      background-color: #1abc9c;
      color: white;
      padding: 15px 40px;
      display: flex;
      align-items: center;
      justify-content: space-between;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .pharmacy-header h2 {
      margin: 0;
      font-size: 24px;
    }

    .pharmacy-header .user {
      font-size: 16px;
    }

    h1 {
      text-align: center;
      color: #333;
      margin: 30px 0 10px;
    }

    table {
      width: 90%;
      max-width: 900px;
      margin: 20px auto;
      border-collapse: collapse;
      background: white;
      border-radius: 10px;
      overflow: hidden;
      box-shadow: 0 4px 20px rgba(0,0,0,0.05);
    }

    th, td {
      padding: 14px 20px;
      border-bottom: 1px solid #eee;
      text-align: center;
    }

    th {
      background-color: #1abc9c;
      color: white;
      font-weight: 600;
    }

    td {
      color: #333;
    }

    tbody tr:hover {
      background-color: #f9f9f9;
    }

    tfoot td {
      font-weight: bold;
      background: #f1f1f1;
      font-size: 16px;
    }
   td.total  {
      font-weight: bold;
      background: #1abc9c;
      font-size: 16px;
    }
    a.checkout-btn {
      display: block;
      width: fit-content;
      margin: 30px auto;
      text-decoration: none;
      background: #28a745;
      color: white;
      padding: 12px 30px;
      border-radius: 6px;
      font-weight: bold;
      transition: background 0.3s;
    }

    a.checkout-btn:hover {
      background: #218838;
    }

    p.empty {
      text-align: center;
      color: #777;
      font-size: 18px;
      margin-top: 40px;
    }
  </style>
</head>
<body>

  <!-- Pharmacy Header -->
  <div class="pharmacy-header">
    <h2><span>ðŸ’Š</span>PharmaPlus</h2> <!-- Change this to your pharmacy name -->
    <div class="user">Logged in as: <strong><%= username %></strong></div>
  </div>

  <h1>Your Cart</h1>

  <% if (cartItems.length === 0) { %>
    <p class="empty">Your cart is empty.</p>
  <% } else { %>
    <table>
      <thead>
        <tr>
          <th>Medicine</th>
          <th>Quantity</th>
          <th>Price</th>
          <th>Subtotal</th>
        </tr>
      </thead>
      <tbody>
        <% let total = 0; %>
        <% cartItems.forEach(item => { %>
          <tr>
            <td><%= item.medId.name %></td>
            <td><%= item.quantity %></td>
            <td>$<%= item.medId.price.toFixed(2) %></td>
            <td>
              $<%= (item.quantity * item.medId.price).toFixed(2) %>
              <% total += item.quantity * item.medId.price; %>
            </td>
          </tr>
        <% }) %>
      </tbody>
      <tfoot>
        <tr>
          <td  style ="color: white" class="total" colspan="3">Total</td>
          <td style ="background-color: white" >$<%= total.toFixed(2) %></td>
        </tr>
      </tfoot>
    </table>
  <% } %>

  <a href="#" class="checkout-btn">Proceed to Checkout</a>
</body>
</html>
