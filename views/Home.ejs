<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>PharmaPlus | Next Gen Care</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;600;700&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Round" rel="stylesheet">
  
  <style>
    /* --- 1. CORE VARIABLES & RESET --- */
    :root {
      --primary: #0d9488;
      --primary-dark: #0f766e;
      --accent: #2dd4bf;
      --bg: #f0fdfa;
      --surface: #ffffff;
      --text-main: #134e4a;
      --text-muted: #64748b;
      --border: #ccfbf1;
      --shadow: 0 10px 40px -10px rgba(13, 148, 136, 0.15);
      --glass: rgba(255, 255, 255, 0.7);
      --nav-height: 80px;
    }

    /* Dark Mode Overrides */
    [data-theme="dark"] {
      --primary: #2dd4bf;
      --primary-dark: #14b8a6;
      --accent: #0d9488;
      --bg: #0f172a;
      --surface: #1e293b;
      --text-main: #f0fdfa;
      --text-muted: #94a3b8;
      --border: #334155;
      --shadow: 0 10px 40px -10px rgba(0, 0, 0, 0.5);
      --glass: rgba(30, 41, 59, 0.7);
    }

    * { box-sizing: border-box; margin: 0; padding: 0; }
    
    body {
      font-family: 'Outfit', sans-serif;
      background-color: var(--bg);
      color: var(--text-main);
      transition: background 0.3s ease, color 0.3s ease;
      overflow-x: hidden;
      line-height: 1.6;
    }

    a { text-decoration: none; color: inherit; transition: 0.2s; }
    ul { list-style: none; }

    /* --- 2. LAYOUT UTILITIES --- */
    .container {
      max-width: 1280px;
      margin: 0 auto;
      padding: 0 24px;
    }

    .btn {
      display: inline-flex;
      align-items: center;
      gap: 8px;
      padding: 12px 28px;
      border-radius: 12px;
      font-weight: 600;
      cursor: pointer;
      transition: transform 0.2s, box-shadow 0.2s;
    }
    
    .btn-primary {
      background: var(--primary);
      color: white; /* Always white text on button */
      box-shadow: 0 4px 14px rgba(13, 148, 136, 0.4);
    }

    [data-theme="dark"] .btn-primary { color: #0f172a; }

    .btn-primary:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 20px rgba(13, 148, 136, 0.6);
    }

    .btn-outline {
      border: 2px solid var(--border);
      color: var(--text-main);
    }

    .btn-outline:hover {
      border-color: var(--primary);
      color: var(--primary);
    }

    /* --- 3. NAVIGATION (Responsive) --- */
    header {
      height: var(--nav-height);
      position: fixed;
      top: 0; left: 0; right: 0;
      z-index: 100;
      background: var(--glass);
      backdrop-filter: blur(12px);
      -webkit-backdrop-filter: blur(12px);
      border-bottom: 1px solid var(--border);
    }

    .nav-container {
      display: flex;
      justify-content: space-between;
      align-items: center;
      height: 100%;
    }

    .logo {
      font-size: 1.5rem;
      font-weight: 700;
      color: var(--primary);
      display: flex;
      align-items: center;
      gap: 8px;
    }

    .nav-links {
      display: flex;
      gap: 32px;
      align-items: center;
    }

    .nav-links a {
      font-weight: 500;
      font-size: 0.95rem;
      color: var(--text-muted);
    }

    .nav-links a:hover, .nav-links a.active {
      color: var(--primary);
    }

    /* Mobile Menu Toggle */
    .menu-btn { display: none; cursor: pointer; }

    /* --- 4. HERO SECTION (Split Layout) --- */
    .hero {
      min-height: 100vh;
      display: flex;
      align-items: center;
      padding-top: var(--nav-height);
      position: relative;
    }

    .hero-grid {
      display: grid;
      grid-template-columns: 1.2fr 1fr;
      gap: 4rem;
      align-items: center;
    }

    .hero-content h1 {
      font-size: clamp(2.5rem, 5vw, 4.5rem);
      line-height: 1.1;
      margin-bottom: 1.5rem;
      background: linear-gradient(135deg, var(--text-main) 0%, var(--primary) 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }

    .hero-content p {
      font-size: clamp(1rem, 2vw, 1.25rem);
      color: var(--text-muted);
      margin-bottom: 2.5rem;
      max-width: 500px;
    }

    .hero-actions {
      display: flex;
      gap: 16px;
      flex-wrap: wrap;
    }

    /* --- 5. 3D VISUAL ELEMENT (Pure CSS) --- */
    .hero-visual {
      position: relative;
      height: 500px;
      display: flex;
      justify-content: center;
      align-items: center;
      perspective: 1000px;
    }

    .floating-card {
      width: 300px;
      height: 420px;
      background: linear-gradient(135deg, var(--surface), var(--bg));
      border: 1px solid var(--border);
      border-radius: 24px;
      position: absolute;
      box-shadow: var(--shadow);
      transform-style: preserve-3d;
      animation: float 6s ease-in-out infinite;
      display: flex;
      flex-direction: column;
      padding: 24px;
      justify-content: space-between;
    }

    .card-glass-layer {
      position: absolute;
      inset: 20px;
      background: rgba(13, 148, 136, 0.05);
      border-radius: 16px;
      transform: translateZ(20px);
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      border: 1px solid var(--border);
    }

    .pill-icon {
      font-size: 4rem;
      color: var(--primary);
      margin-bottom: 1rem;
    }

    .card-badges {
      position: absolute;
      top: 50%;
      right: -40px;
      display: flex;
      flex-direction: column;
      gap: 12px;
      transform: translateZ(50px) translateY(-50%);
    }

    .badge {
      background: var(--surface);
      padding: 12px 20px;
      border-radius: 12px;
      box-shadow: 0 10px 30px rgba(0,0,0,0.1);
      font-weight: 600;
      font-size: 0.9rem;
      display: flex;
      align-items: center;
      gap: 8px;
      color: var(--text-main);
      border: 1px solid var(--border);
    }

    .badge i { color: var(--accent); }

    /* --- 6. FEATURE GRID --- */
    .features {
      padding: 4rem 0;
    }

    .feature-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 2rem;
    }

    .feature-card {
      background: var(--surface);
      padding: 2rem;
      border-radius: 20px;
      border: 1px solid var(--border);
      transition: 0.3s;
    }

    .feature-card:hover {
      transform: translateY(-5px);
      box-shadow: var(--shadow);
      border-color: var(--primary);
    }

    .icon-box {
      width: 50px;
      height: 50px;
      border-radius: 12px;
      background: rgba(13, 148, 136, 0.1);
      color: var(--primary);
      display: flex;
      align-items: center;
      justify-content: center;
      margin-bottom: 1.5rem;
    }

    /* --- 7. RESPONSIVENESS --- */
    @media (max-width: 900px) {
      .hero-grid {
        grid-template-columns: 1fr;
        text-align: center;
        gap: 3rem;
      }
      
      .hero-content p, .hero-actions {
        margin-left: auto;
        margin-right: auto;
        justify-content: center;
      }

      .floating-card {
        width: 260px;
        height: 380px;
      }
      
      .card-badges {
        right: -20px;
      }
    }

    @media (max-width: 768px) {
      .nav-links {
        position: fixed;
        top: var(--nav-height);
        left: 0;
        right: 0;
        background: var(--surface);
        flex-direction: column;
        padding: 2rem;
        border-bottom: 1px solid var(--border);
        transform: translateY(-150%);
        transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      }
      
      .nav-links.open { transform: translateY(0); }
      .menu-btn { display: block; color: var(--text-main); }
    }

    /* --- ANIMATIONS --- */
    @keyframes float {
      0%, 100% { transform: translateY(0) rotateY(-5deg); }
      50% { transform: translateY(-20px) rotateY(5deg); }
    }
  </style>
</head>
<body>

  <header>
    <div class="container nav-container">
      <a href="#" class="logo">
        <i class="material-icons-round">medication</i> PharmaPlus
      </a>
      
      <div class="menu-btn" id="menuBtn">
        <i class="material-icons-round">menu</i>
      </div>

      <ul class="nav-links" id="navLinks">
        <li><a href="/" class="active">Home</a></li>
        <li><a href="/login">Login</a></li>
        <li><a href="/signup">SignUp</a></li>
          <div class="btn btn-primary" id="themeToggle" style="padding: 8px 16px;">
            <i class="material-icons-round" style="font-size: 1.2rem">dark_mode</i>
          </div>
        </li>
      </ul>
    </div>
  </header>

  <main>
    <section class="hero">
      <div class="container hero-grid">
        <div class="hero-content">
          <h1>Pharmacy care, <br>simplified for you.</h1>
          <p>Skip the pharmacy lines. Manage prescriptions, order refills, and chat with pharmacistsâ€”all from your phone.</p>
          <div class="hero-actions">
            <a href="/signup" class="btn btn-primary">
              Order Now <i class="material-icons-round">arrow_forward</i>
            </a>
            <a href="#" class="btn btn-outline">
              <i class="material-icons-round">upload_file</i> Upload Rx
            </a>
          </div>
        </div>

        <div class="hero-visual">
          <div class="floating-card">
            <div class="card-glass-layer">
              <i class="material-icons-round pill-icon">vaccines</i>
              <h3 style="margin-top: 10px;">Refill Due</h3>
              <small style="color: var(--text-muted)">Amoxicillin 500mg</small>
            </div>
            <div class="card-badges">
              <div class="badge">
                <i class="material-icons-round">verified</i> FDA Approved
              </div>
              <div class="badge">
                <i class="material-icons-round">local_shipping</i> Free Delivery
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="features container">
      <div class="feature-grid">
        <div class="feature-card">
          <div class="icon-box"><i class="material-icons-round">inventory_2</i></div>
          <h3>Smart Inventory</h3>
          <p style="color: var(--text-muted)">Real-time stock checks so you never order out-of-stock items.</p>
        </div>
        <div class="feature-card">
          <div class="icon-box"><i class="material-icons-round">alarm_on</i></div>
          <h3>Auto-Refills</h3>
          <p style="color: var(--text-muted)">Set it and forget it. We ship your meds before you run out.</p>
        </div>
        <div class="feature-card">
          <div class="icon-box"><i class="material-icons-round">privacy_tip</i></div>
          <h3>Private & Secure</h3>
          <p style="color: var(--text-muted)">HIPAA compliant data handling to keep your health info safe.</p>
        </div>
      </div>
    </section>
  </main>

  <script>
    // 1. Mobile Menu Toggle
    const menuBtn = document.getElementById('menuBtn');
    const navLinks = document.getElementById('navLinks');
    
    menuBtn.addEventListener('click', () => {
      navLinks.classList.toggle('open');
      const icon = menuBtn.querySelector('i');
      icon.textContent = navLinks.classList.contains('open') ? 'close' : 'menu';
    });

    // 2. Dark Mode Toggle with Local Storage
    const themeToggle = document.getElementById('themeToggle');
    const icon = themeToggle.querySelector('i');
    
    function setTheme(isDark) {
      document.documentElement.setAttribute('data-theme', isDark ? 'dark' : 'light');
      icon.textContent = isDark ? 'light_mode' : 'dark_mode';
      localStorage.setItem('theme', isDark ? 'dark' : 'light');
    }

    // Check saved preference
    const savedTheme = localStorage.getItem('theme') === 'dark';
    setTheme(savedTheme);

    themeToggle.addEventListener('click', () => {
      const isDark = document.documentElement.getAttribute('data-theme') === 'dark';
      setTheme(!isDark);
    });

    // 3. 3D Tilt Effect on Hero Card
    const card = document.querySelector('.floating-card');
    const container = document.querySelector('.hero-visual');

    container.addEventListener('mousemove', (e) => {
      if (window.innerWidth < 900) return; // Disable on mobile
      const xAxis = (window.innerWidth / 2 - e.pageX) / 25;
      const yAxis = (window.innerHeight / 2 - e.pageY) / 25;
      card.style.transform = `rotateY(${xAxis}deg) rotateX(${yAxis}deg)`;
    });

    container.addEventListener('mouseleave', () => {
      card.style.transform = `rotateY(0deg) rotateX(0deg)`; // Reset
      card.style.transition = "transform 0.5s ease"; // Smooth reset
    });

    container.addEventListener('mouseenter', () => {
      card.style.transition = "none"; // Remove transition for instant follow
    });

  </script>
</body>
</html>