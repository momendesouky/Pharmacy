<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Pharmacy Inventory</title>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
  <style>
    :root {
      --brand: #1abc9c;
      --brand-dark: #148f77;
    }

    body {
      background: #f7f9fc;
    }

    nav {
      background-color: var(--brand);
    }

    .search-card {
      border-radius: 12px;
      padding: 1rem 1.5rem;
      box-shadow: 0 12px 24px rgba(0, 0, 0, 0.08);
    }

    .medicine-card {
      border-radius: 16px;
      overflow: hidden;
      box-shadow: 0 16px 30px rgba(0, 0, 0, 0.08);
      animation: fadeUp 0.5s ease;
    }

    .medicine-card .card-image img {
      height: 220px;
      object-fit: cover;
    }

    .price-chip {
      background: rgba(26, 188, 156, 0.15);
      color: #1a7f6b;
      font-weight: 600;
    }

    .btn {
      background-color: var(--brand);
    }

    .btn:hover {
      background-color: var(--brand-dark);
    }

    @keyframes fadeUp {
      from { transform: translateY(14px); opacity: 0; }
      to { transform: translateY(0); opacity: 1; }
    }
  </style>
</head>
<body>
  <nav>
    <div class="nav-wrapper container">
      <a href="/admin/Medcines" class="brand-logo">ðŸ’Š Pharmacy Admin</a>
      <ul class="right hide-on-med-and-down">
        <li><a href="/admin/Medcines/add">Add Medicine</a></li>
        <li><a href="/logout">Logout</a></li>
      </ul>
    </div>
  </nav>

  <section class="container section">
    <div class="search-card white">
      <div class="row" style="margin-bottom: 0;">
        <div class="input-field col s12">
          <i class="material-icons prefix">search</i>
          <input id="search" type="text" onkeyup="filterCards()" placeholder="Search medicines...">
        </div>
      </div>
    </div>
  </section>

  <main class="container section">
    <div class="row" id="medicine-grid">
      <% meds.forEach(med => { %>
        <div class="col s12 m6 l4 medicine-item">
          <div class="card medicine-card">
            <div class="card-image">
              <% if (med.imageUrl) { %>
                <img src="<%= med.imageUrl %>" alt="<%= med.name %>">
              <% } else { %>
                <img src="https://images.unsplash.com/photo-1584017911766-d451b3d0e843?auto=format&fit=crop&w=800&q=80" alt="No image">
              <% } %>
              <span class="card-title"><%= med.name %></span>
            </div>
            <div class="card-content">
              <p><strong>Form:</strong> <%= med.form %></p>
              <div class="section">
                <span class="new badge price-chip" data-badge-caption="$"><%= med.price %></span>
              </div>
            </div>
            <div class="card-action">
              <a href="/edit/<%= med._id %>"><i class="material-icons left">edit</i>Edit</a>
              <form action="/delete/<%= med._id %>" method="POST" style="display: inline;">
                <button class="btn-flat red-text" type="submit">
                  <i class="material-icons left">delete</i>Delete
                </button>
              </form>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </main>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
  <script>
    function filterCards() {
      const input = document.getElementById('search').value.toLowerCase();
      document.querySelectorAll('.medicine-item').forEach(card => {
        const text = card.innerText.toLowerCase();
        card.style.display = text.includes(input) ? '' : 'none';
      });
    }
  </script>
</body>
</html>
