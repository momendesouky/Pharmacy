<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Pharmacy Inventory</title>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
  <style>
    :root {
      --brand: #1abc9c;
      --brand-dark: #148f77;
    }

    body {
      background: #f7f9fc;
    }

    nav {
      background-color: var(--brand);
    }

    .medicine-card {
      border-radius: 16px;
      overflow: hidden;
      box-shadow: 0 16px 30px rgba(0, 0, 0, 0.08);
      animation: fadeUp 0.5s ease;
    }

    .medicine-card .card-image img {
      height: 220px;
      object-fit: cover;
    }

    .price-chip {
      background: rgba(26, 188, 156, 0.15);
      color: #1a7f6b;
      font-weight: 600;
    }

    .btn {
      background-color: var(--brand);
    }

    .btn:hover {
      background-color: var(--brand-dark);
    }

    .pagination li.active {
      background-color: var(--brand);
    }

    @keyframes fadeUp {
      from { transform: translateY(14px); opacity: 0; }
      to { transform: translateY(0); opacity: 1; }
    }
  </style>
</head>
<body>
  <nav>
    <div class="nav-wrapper container">
      <a href="/user/Medcines" class="brand-logo">ðŸ’Š PharmaPlus</a>
      <ul class="right hide-on-med-and-down">
        <% if (role === 'ADMIN') { %>
          <li><a href="/admin/Medcines">Admin Panel</a></li>
        <% } %>
        <li><a href="/cart"><i class="material-icons left">shopping_cart</i>Cart</a></li>
        <li><a href="/logout">Logout</a></li>
      </ul>
    </div>
  </nav>

  <main class="container section">
    <div class="row">
      <% meds.forEach(med => { %>
        <div class="col s12 m6 l4">
          <div class="card medicine-card">
            <div class="card-image">
              <% if (med.imageUrl) { %>
                <img src="<%= med.imageUrl %>" alt="<%= med.name %>">
              <% } else { %>
                <img src="https://images.unsplash.com/photo-1584017911766-d451b3d0e843?auto=format&fit=crop&w=800&q=80" alt="No image">
              <% } %>
              <span class="card-title"><%= med.name %></span>
            </div>
            <div class="card-content">
              <p><strong>Form:</strong> <%= med.form %></p>
              <div class="section">
                <span class="new badge price-chip" data-badge-caption="$"><%= med.price %></span>
              </div>
            </div>
            <div class="card-action">
              <a href="/viewDetails/<%= med._id %>"><i class="material-icons left">visibility</i>Details</a>
              <form action="/cart/addfrominventory/<%= med._id %>" method="POST" style="display: inline;">
                <button class="btn-flat" type="submit">
                  <i class="material-icons left">add_shopping_cart</i>Add
                </button>
              </form>
            </div>
          </div>
        </div>
      <% }) %>
    </div>

    <ul class="pagination center-align">
      <li class="<%= currentPage === 1 ? 'disabled' : 'waves-effect' %>">
        <a href="/user/Medcines?page=<%= currentPage - 1 %>"><i class="material-icons">chevron_left</i></a>
      </li>
      <% for (let i = 1; i <= totalPages; i++) { %>
        <li class="<%= currentPage === i ? 'active' : 'waves-effect' %>"><a href="/user/Medcines?page=<%= i %>"><%= i %></a></li>
      <% } %>
      <li class="<%= currentPage === totalPages ? 'disabled' : 'waves-effect' %>">
        <a href="/user/Medcines?page=<%= currentPage + 1 %>"><i class="material-icons">chevron_right</i></a>
      </li>
    </ul>
  </main>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
</body>
</html>
